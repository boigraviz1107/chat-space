.chatmain-messeage_list_box{data: {id: message.id}}
  .chatmain-messeage_list_box_data
    .chatmain-messeage_list_box_data_name
      = message.user.name
    .chatmain-messeage_list_box_data_day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chatmain-messeage_list_box_masseage
    - if message.content.present?
      %p.chatmain-messeage_list_box_masseage__content
        = message.content
    = image_tag message.image.url, class: '.chatmain-messeage_list_box_masseage__image' if message.image.presence

