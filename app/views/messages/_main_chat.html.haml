.chatmain

  .chatmain-groupinfo
    .chatmain-groupinfo_name
      .chatmain-groupinfo_name_user
        = @group.name
      .chatmain-groupinfo_name_group
        .chatmain-groupinfo_name_group_member
          Memberï¼š
          - @group.users.each do |user|
            = user.name
      
    .chatmain-groupinfo_edit
      = link_to 'Edit',  edit_group_path(@group) ,class: "edit"

      
  .chatmain-messeage_list
    =render @messages
  .chatmain-masseage_form
    .chatmain-masseage_form_input
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: "chatmain-masseage_form_input_text", placeholder: "type a message"
        .chatmain-masseage_form_input_mask
          = f.label :image, class: "chatmain-masseage_form_input_mask_masseage" do
            = icon('fas', 'image')
          = f.file_field :image, class: "chatmain-masseage_form_input_mask_masseage_file"
        = f.submit "submit", class: "input_btn"


